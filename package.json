{
  "name": "drost-monorepo",
  "version": "0.1.0-rc.2",
  "private": true,
  "license": "MIT",
  "type": "module",
  "packageManager": "pnpm@10.12.4",
  "scripts": {
    "build": "pnpm -r --if-present build",
    "test": "vitest run",
    "test:watch": "vitest",
    "smoke:cli": "node scripts/smoke/cli-smoke.mjs",
    "smoke:cli-sessions": "node scripts/smoke/cli-session-commands-smoke.mjs",
    "smoke:control-api": "node scripts/smoke/control-api-smoke.mjs",
    "smoke:telegram": "node scripts/smoke/telegram-path-smoke.mjs",
    "smoke:restart-persistence": "node scripts/smoke/restart-persistence-smoke.mjs",
    "smoke:perf": "node scripts/smoke/performance-baseline-smoke.mjs",
    "smoke:observability-schema": "node scripts/smoke/observability-schema-smoke.mjs",
    "smoke": "pnpm run smoke:cli && pnpm run smoke:control-api && pnpm run smoke:cli-sessions && pnpm run smoke:telegram && pnpm run smoke:restart-persistence && pnpm run smoke:perf && pnpm run smoke:observability-schema",
    "release:rc": "pnpm build && pnpm test && pnpm smoke",
    "lint": "echo 'lint not configured yet'"
  },
  "devDependencies": {
    "@types/node": "^22.13.10",
    "@types/react": "^19.2.14",
    "tsx": "^4.20.5",
    "typescript": "^5.8.2",
    "vitest": "^2.1.9"
  }
}
